// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Calcul Neuromorphique",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"forwardPorts": [],
	// "remoteEnv": {
	// 	"PODMAN_USERNS": "keep-id"
	// },
	"runArgs": [
		"--userns=keep-id",
		"--net",
		"host",
		"--volume=${env:XDG_RUNTIME_DIR}/${env:WAYLAND_DISPLAY}:/tmp/${env:WAYLAND_DISPLAY}",
		"--device=/dev/dri",
		"--volume=/run/user/1000/bus:/tmp/bus"
	],
	"containerEnv": {
		"WAYLAND_DISPLAY": "/tmp/${localEnv:WAYLAND_DISPLAY}",
		"XDG_RUNTIME_DIR": "/tmp",
		"DBUS_SESSION_BUS_ADDRESS": "unix:path=/tmp/bus",
		"GDK_BACKEND": "wayland",
		"QT_QPA_PLATFORM": "wayland-egl"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"plantuml.server": "http://localhost:50000"
			},
			"extensions": [
				"ms-python.debugpy",
				"charliermarsh.ruff",
				"ms-python.autopep8",
				"MS-CEINTL.vscode-language-pack-fr",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"DavidAnson.vscode-markdownlint",
				"tamasfe.even-better-toml",
				"jebbs.plantuml"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo apt update && sudo apt upgrade && pip install --upgrade pip uv && echo 'eval \"$(uv generate-shell-completion bash)\"' >> ~/.bashrc && echo 'eval \"$(uvx --generate-shell-completion bash)\"' >> ~/.bashrc",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"containerUser": "vscode"
}